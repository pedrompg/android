<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/main_menu_container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.shooter.MainActivity"
             tools:ignore="MergeRootFrame">

    <ImageView
        android:id="@+id/main_menu_image"
        android:background="@drawable/space_background"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/main_menu_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/start_button"
            android:src="@drawable/start_selector"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/exit_button"
            android:src="@drawable/exit_selector"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"/>

    </RelativeLayout>

</RelativeLayout>